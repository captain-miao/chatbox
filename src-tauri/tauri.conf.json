{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build:react",
        "beforeDevCommand": "cross-env BROWSER=none npm run start:react",
        "devPath": "http://localhost:3000",
        "distDir": "../build",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "chatbox",
        "version": "0.3.9"
    },
    "tauri": {
        "allowlist": {
            "shell": {
                "open": true
            },
            "app": {
                "all": true
            },
            "window": {
                "all": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$APPDATA",
                    "$APPDATA/*",
                    "$APPCONFIG",
                    "$APPCONFIG/*",
                    "$LOCALDATA/chatbox/*"
                ]
            },
            "http": {
                "all": true
            },
            "dialog": {
                "all": true, 
                "open": true, 
                "save": true 
            },
            "os": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.extstar.chat.assistant",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "webviewInstallMode": {
                    "silent": true,
                    "type": "embedBootstrapper"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://gist.githubusercontent.com/captain-miao/3832ae4134bde608d7b7cf16ca61f4ac/raw/chatbox.releases.json",
                "https://gist.githubusercontent.com/captain-miao/3832ae4134bde608d7b7cf16ca61f4ac/raw"
            ],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNCODVDQjcxMDU4RDI0OEQKUldTTkpJMEZjY3VGTzd3MHk4VHN1YUFJRmpSakJYeGc3dWRxc1F1eDFSY1pnN3p4eUxGamR6NTkK"
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 800,
                "resizable": true,
                "title": "chatbox",
                "width": 1000
            }
        ]
    }
}